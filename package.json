{
    "name": "reaql-frontend",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@apollo/client": "^3.3.2",
        "date-fns": "^2.16.1",
        "graphql": "^15.4.0",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-router-dom": "^5.2.0",
        "react-scripts": "4.0.1",
        "styled-components": "^5.2.1",
        "typescript": "^4.1.2",
        "web-vitals": "^0.2.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "cross-env NODE_PATH=./src react-scripts test",
        "test:watch": "npm run test --watchAll",
        "test:coverage": "npm run test --runInBand --coverage --collectCoverageFrom=src/**/*.{ts,tsx} --collectCoverageFrom=!src/**/*.stories.{ts,tsx} --collectCoverageFrom=!src/lib/**/* --collectCoverageFrom=!src/config/**/* --collectCoverageFrom=!src/lib --collectCoverageFrom=!src/**/*.{types,d}.{ts,tsx}",
        "test:coverage:watch": "npm run test:coverage --watchAll",
        "eject": "react-scripts eject",
        "storybook": "start-storybook -p 6006 -s public",
        "build-storybook": "build-storybook -s public",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "pretify": "prettier --config=./.prettierrc --write ./src",
        "codegen": "graphql-codegen"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@graphql-codegen/cli": "^1.19.4",
        "@graphql-codegen/typescript": "^1.19.0",
        "@storybook/addon-actions": "^6.1.9",
        "@storybook/addon-essentials": "^6.1.9",
        "@storybook/addon-links": "^6.1.9",
        "@storybook/node-logger": "^6.1.9",
        "@storybook/preset-create-react-app": "^3.1.5",
        "@storybook/react": "^6.1.9",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@testing-library/user-event": "^12.3.0",
        "@types/enzyme": "^3.10.8",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.16",
        "@types/node": "^12.19.8",
        "@types/react": "^16.14.0",
        "@types/react-dom": "^16.9.10",
        "@types/react-router-dom": "^5.1.6",
        "@types/styled-components": "^5.1.4",
        "cross-env": "^7.0.3",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.5",
        "enzyme-to-json": "^3.6.1",
        "husky": "^4.3.0",
        "jest-styled-components": "^7.0.3",
        "ts-loader": "^8.0.11"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "pre-push": "npm run test"
        }
    }
}
